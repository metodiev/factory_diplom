<Window x:Class="FactoryDiplom.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryDiplom"
        mc:Ignorable="d"
        Title="LoginPage" Height="300" Width="300">
    <Grid>
        <Label x:Name="lb_username" Content="Потребителско име"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,74,0,0"/>
        <TextBox x:Name="tb_username"  HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="137,77,0,0"/>
        <Label x:Name="lb_password" Content="Парола"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="81,124,0,0" RenderTransformOrigin="0.515,2.343"/>
        <PasswordBox x:Name="pb_password" HorizontalAlignment="Left" Margin="137,130,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_login" Content="Test" Click="btn_login_Click" HorizontalAlignment="Left" Margin="116,175,0,0" VerticalAlignment="Top" Width="75" IsDefault="True"/>
    </Grid>
</Window>
